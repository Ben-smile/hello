<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 登录 -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 查询 -->
    <servlet>
        <servlet-name>inquiry</servlet-name>
        <servlet-class>controller.InquiryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inquiry</servlet-name>
        <url-pattern>/inquiry</url-pattern>
    </servlet-mapping>

    <!-- 真正存款 -->
    <servlet>
        <servlet-name>deposit</servlet-name>
        <servlet-class>controller.DepositController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deposit</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>

</web-app>